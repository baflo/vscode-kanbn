{
  "name": "vscode-kanbn-boards",
  "displayName": "Kanbn Extension for VSCode",
  "description": "An extension for Visual Studio Code that allows you to manage tasks on a kanban board.",
  "icon": "resources/kanbn.png",
  "galleryBanner": {
    "color": "#72abdd",
    "theme": "dark"
  },
  "version": "0.14.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "author": "Gordon Larrigan",
  "contributors": [
    {
      "name": "Zigmas Bitinas"
    },
    {
      "name": "Florian Bachmann (baflo)"
    }
  ],
  "license": "MIT",
  "publisher": "samgiz",
  "keywords": [
    "kanbn",
    "kanban",
    "project",
    "management",
    "task",
    "todo",
    "agile",
    "scrum",
    "sprint",
    "board"
  ],
  "categories": [
    "Visualization",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/baflo/vscode-kanbn.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./build/ext-src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kanbn.createBoard",
        "title": "Create board",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.openBoard",
        "title": "Open board",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.addTask",
        "title": "Add task",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.openTask",
        "title": "Open task",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.saveTask",
        "title": "Save task",
        "category": "Kanbn",
        "enablement": "activeWebviewPanelId === 'KanbnTaskPanel'"
      },
      {
        "command": "kanbn.getActiveTaskId",
        "title": "Get task ID",
        "category": "Kanbn",
        "enablement": "false"
      },
      {
        "command": "kanbn.getActiveTaskTitle",
        "title": "Get current task title",
        "category": "Kanbn",
        "enablement": "false"
      },
      {
        "command": "kanbn.openTaskFile",
        "title": "Open task file",
        "category": "Kanbn",
        "enablement": "activeWebviewPanelId === 'KanbnTaskPanel'"
      },
      {
        "command": "kanbn.burndown",
        "title": "Open burndown chart",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.archiveTasks",
        "title": "Archive tasks",
        "category": "Kanbn"
      },
      {
        "command": "kanbn.restoreTasks",
        "title": "Restore tasks",
        "category": "Kanbn"
      }
    ],
    "keybindings": [
      {
        "command": "kanbn.saveTask",
        "key": "ctrl+s"
      },
      {
        "command": "kanbn.openTaskFile",
        "key": "F4"
      }
    ],
    "configuration": {
      "title": "Kanbn",
      "properties": {
        "kanbn.additionalBoards": {
          "type": "array",
          "default": [],
          "description": "Specify additional kanbn boards in non-standard locations."
        },
        "kanbn.showUninitialisedStatusBarItem": {
          "type": "boolean",
          "default": true,
          "description": "Show the status bar item in workspaces where Kanbn has not yet been initialised."
        },
        "kanbn.showTaskNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when a task is created, updated or deleted."
        },
        "kanbn.showSprintButton": {
          "type": "boolean",
          "default": false,
          "description": "Show a 'Start sprint' button on the Kanbn board."
        },
        "kanbn.showBurndownButton": {
          "type": "boolean",
          "default": false,
          "description": "Show a 'Burndown chart' button on the Kanbn board."
        },
        "kanbn.taskfileEditor": {
          "type": "string",
          "default": "vscode.markdown.preview.editor",
          "description": "Set the editor to be used when opening task source files."
        }
      }
    }
  },
  "dependencies": {
    "@basementuniverse/kanbn": "git@github.com:samgiz/kanbn.git#1536b686f8b530c5eca1cd997347f250d767951c",
    "dateformat": "^5.0.3",
    "param-case": "^3.0.4",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-beautiful-dnd": "13.1.1",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.3",
    "react-markdown": "^8.0.3",
    "react-syntax-highlighter": "^15.5.0",
    "react-textarea-autosize": "^8.4.0",
    "recharts": "^2.2.0",
    "rehype-katex": "^6.0.2",
    "remark-math": "^5.1.1",
    "throttle-debounce": "^5.0.0",
    "uuid": "^9.0.0",
    "@vscode/codicons": "0.0.36"
  },
  "scripts": {
    "vscode:prepublish": "node build-view.js && node build-ext.js",
    "start": "react-scripts start",
    "build": "node ./scripts/build-non-split.js && tsc -p tsconfig.extension.json",
    "package": "npm run build && vsce package",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@types/dateformat": "^5.0.0",
    "@types/git-user-name": "^2.0.1",
    "@types/jest": "^29.2.4",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/react-syntax-highlighter": "^15.5.5",
    "@types/recharts": "^1.8.24",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.2.1",
    "@vscode/vsce": "^3.1.0",
    "esbuild": "^0.24.0",
    "esbuild-plugin-tsc": "^0.4.0",
    "eslint": "^8.30.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "react-scripts": "^5.0.1",
    "rewire": "^6.0.0",
    "terser": "5.16.0",
    "typescript": "^4.9.4"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}